<Window x:Class="Library.UsersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        Title="Користувачі" Height="450" Width="800" Background="LightSkyBlue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="usersList" Background="LightSkyBlue" Margin="20" BorderThickness="3"
                 Grid.ColumnSpan="3" FontSize="18"></ListBox>
        <Button x:Name="btnAddUser" Grid.Row="1" Content="Додати користувача"
                BorderBrush="#FFABADB3" BorderThickness="2" Margin="20 7 10 7" Background="LightSkyBlue"
                FontSize="14" Click="btnAddUser_Click"></Button>
        <Button x:Name="btnEditUser" Grid.Row="1" Grid.Column="1" Content="Редагувати користувача"
        BorderBrush="#FFABADB3" BorderThickness="2" Margin="10 7" Background="LightSkyBlue"
        FontSize="14" Click="btnEditUser_Click"></Button>
        <Button x:Name="btnDeleteUser" Grid.Row="1" Grid.Column="2" Content="Видалити користувача"
        BorderBrush="#FFABADB3" BorderThickness="2" Margin="10 7 20 7" Background="LightSkyBlue"
        FontSize="14" Click="btnDeleteUser_Click"></Button>
    </Grid>
</Window>
